@page
@model Biblio.Pages.biblio1Model
@{
    ViewData["Title"] = "La biblioth√®que";

}
<h1>@ViewData["Title"]</h1>

<form method="post">
    @* Attention: fait en sorte que name est suivi du nom de parametre qui convient (attention aux erreure d'ortographes) *@
    <input type="number" name="Id"/>
    <input type="text" name="Titre"/>
    <input type="text" name="Auteur"/>
    <input type="text" name="date_Publication"/>

    <button type="submit">Ajouter</button>

</form>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Auteur</th>
            <th>Date de publication</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var LIVRE in Model.Livres){
            <tr>
                <td>@LIVRE.Id</td>
                <td>@LIVRE.Titre</td>
                <td>@LIVRE.Auteur</td>
                <td>@LIVRE.Date_Publication</td>
            </tr>
        }
    </tbody>

</table>


