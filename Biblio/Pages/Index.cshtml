@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<h1 class="fw-light"><Label>la bibliotheqe</Label></h1>
<div class="row">
    @foreach (var LIVRE in Model.Livres)
    {
        <div class="col-3 p-1">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">@LIVRE.Titre</h5>
                    <p class="card-text">@LIVRE.Auteur</p>
                    <div class="d-flex justify-content-between">
                    <span class="card-text">@LIVRE.Date_Publication</span>
                    <a class="btn btn-danger btn-sm" asp-page="/Order" asp-route-id="@LIVRE.Id">Order Now</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>